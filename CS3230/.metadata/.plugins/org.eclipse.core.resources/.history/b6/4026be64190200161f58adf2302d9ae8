import java.util.Scanner;


public class Main {
	
	public static int numVillages, numPosts;
	public static int[] value;
	public static int[][] sum, best;
	
	public static void main(String[] args){
		
		Scanner sc = new Scanner(System.in);
		
		numVillages = sc.nextInt();
		numPosts = sc.nextInt();
		
		value = new int[numVillages];
		
		for(int i=0; i<numVillages; i++)
			value[i] = sc.nextInt();
		
		initialise();
		System.out.println(count(numVillages-1, numPosts-1));
		sc.close();
		
	}
	
	public static void initialise() {
		int i, j, k, center;
		
		sum = new int[numVillages][numVillages];
		best = new int[numVillages][numPosts];
		
		for(i = 0; i < numVillages; i++)
			for(j = i + 1; j < numVillages; j++)
			{
				center = i + (j - i) / 2;

				for(k = i; k <= j; k++)
					if(k >= center)
						sum[i][j] += value[k] - value[center];
					else 
						sum[i][j] += value[center] - value[k];
			}
		for(i = 0; i < numVillages; i++)
			best[i][0] = sum[0][i];
	}
	
	public static int count(int end, int post) {
		
		if(post == 0)
			return sum[0][end];
		
		if(best[end][post] != 0)
			return best[end][post];
		
		int min = Integer.MAX_VALUE, temp;
		
		for(int i=end-1; i >= post - 1; i--) {
			temp = count(i, post - 1) + sum[i+1][end];
			
			if(temp<min)
				min = temp;
			
		}
		best[end][post] = min;
		
		return min;
	}
}
